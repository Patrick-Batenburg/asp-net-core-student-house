@model IEnumerable<Meal>
@{
    ViewData["Title"] = "Meals";
}

<div class="row">
    <div class="col-12">
        <h1>Upcoming meals</h1>
    </div>
</div>
<div class="row">
    @if (Model.Count() == 0)
    {
        <p>There are no meals currently.</p>
    }
    else
    {
        foreach (Meal meal in Model)
        {
            <partial name="_MealOverviewPartial" for="@meal" />
        }
    }
</div>