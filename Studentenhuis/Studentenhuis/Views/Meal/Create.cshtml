@model Meal
@{
    ViewData["Title"] = "Create meal";
}

<div class="row">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="row">
    <div class="well">
        <form asp-controller="Meal" asp-action="Create" method="post">
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="Description">Description (optional)</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="Date"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="MaxGuests"></label>
                    <input asp-for="MaxGuests" min="1" value="1" class="form-control" />
                    <span asp-validation-for="MaxGuests" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" min="0" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>